---
interface Props {
  background?: "dark" | "light";
}

const { background = "dark" } = Astro.props;
---

<section class:list={["section", background]}>
  <slot />
</section>

<style>
  @layer components {
    section {
      display: grid;
      grid-template-columns: subgrid;
      padding-block: 5rem;

      > * {
        grid-column: content;
      }
    }

    section.dark {
      background-color: var(--primary-black);
    }

    section.light {
      background-color: var(--secondary-white);
    }
  }
</style>
