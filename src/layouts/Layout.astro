---
import "@styles/main.css";
import Header from "@components/Header.astro";
import Footer from "@components/Footer.astro";
import Newsletter from "@components/Newsletter.astro";
import SectionWrapper from "@components/containers/SectionWrapper.astro";
const Title = Astro.props.Title;
---

<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link href="https://fonts.googleapis.com/css2?family=Amatic+SC:wght@400;700&family=Lato:ital,wght@0,100;0,300;0,400;0,700;0,900;1,100;1,300;1,400;1,700;1,900&display=swap" rel="stylesheet" />

    <title>{Title} - AskExperts</title>
    <style is:inline>
      @layer reset, global, components, overrides;
    </style>
  </head>
  <body>
    <Header />
    <main>
      <slot />
      <SectionWrapper>
        <Newsletter />
      </SectionWrapper>
    </main>

    <Footer />
  </body>
</html>

<style>
  main {
    grid-column: edge;
    display: grid;
    grid-template-columns: subgrid;
  }
  footer {
    grid-column: edge;
    display: grid;
    grid-template-columns: subgrid;
    height: 219px;
  }
</style>
