---
import Layout from "@layouts/Layout.astro";
import DynHero from "@components/DynHero.astro";
import AboutOurVision from "@components/AboutOurVision.astro";
import Counter from "@components/Counter.astro";
import Values from "@components/Values.astro";
import TeamGrid from "@components/TeamGrid.astro";
import AboutFAQ from "@components/AboutFAQ.astro";
import Newsletter from "@components/Newsletter.astro";
import Footer from "@components/Footer.astro";
---

<Layout title="About Us - AskExperts">
  <DynHero title="About Us" heading="Creative Services For Boost Your Business Growth" imagePath="about-imgs/hero.png" />
  <AboutOurVision />
  <Counter />
  <Values background="grey" />
  <TeamGrid title="OUR TEAM" subtitle="We champion the bold to achieve the extraordinary" description="Our success stems from the synergy between dedicated teams and our valued clients. We prioritize a company culture that fosters exceptional productivity, ensures customer satisfaction, and promotes mutual respect among all team members." limit={3} background="light" />
  <AboutFAQ />
  <Newsletter />
  <Footer />
</Layout>
