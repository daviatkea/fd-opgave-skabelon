---
//@ts-nocheck
import Section from "../layouts/Section.astro";
import PhoneIcon from "@icons/phone.svg?raw";
import ClockIcon from "@icons/clock.svg?raw";
import PinIcon from "@icons/pin.svg?raw";
import PatternSvg from "@assets/images/Pattern.svg?raw";
import img1 from "@assets/images/contact-imgs/1.png";
import img2 from "@assets/images/contact-imgs/2.png";
import img3 from "@assets/images/contact-imgs/3.png";
---

<Section background="secondary-light-grey">
  <div class="contact">
    <div class="contact-info">
      <div class="text-section">
        <span class="title">Process</span>
        <h2>Contact Us. It's Easy.</h2>
        <p>Leverage agile frameworks to provide a robust synopsis for high level overviews. Iterative approaches to corporate strategy foster collaborative.</p>
      </div>

      <div class="info-items">
        <div class="info-item">
          <div class="icon-wrapper">
            <span class="icon" set:html={PhoneIcon} />
          </div>
          <div class="info-text">
            <p class="title">Call Today</p>
            <p class="value">+1 800 100 900</p>
          </div>
        </div>

        <div class="info-item">
          <div class="icon-wrapper">
            <span class="icon" set:html={ClockIcon} />
          </div>
          <div class="info-text">
            <p class="title">Monday To Friday</p>
            <p class="value">9AM - 5PM</p>
          </div>
        </div>

        <div class="info-item">
          <div class="icon-wrapper">
            <span class="icon" set:html={PinIcon} />
          </div>
          <div class="info-text">
            <p class="title">USA Office</p>
            <p class="value">195 Devonshire St Boston, MA 02110</p>
          </div>
        </div>
      </div>
    </div>

    <div class="images-section">
      <div class="pattern-bg" set:html={PatternSvg} />
      <div class="green-box"></div>
      <img src={img1.src} alt="Team member" class="img-main" />
      <img src={img2.src} alt="Team collaboration" class="img-secondary-1" />
      <img src={img3.src} alt="Team meeting" class="img-secondary-2" />
    </div>
  </div>
</Section>

<style>
  @layer components {
    .contact {
      container-type: inline-size;
      container-name: contact;
      grid-area: 1 / 1;
      display: grid;
      grid-template-columns: var(--gtc-1200);
      padding: var(--flow-lg) var(--flow-lg);
    }

    .contact-info,
    .images-section {
      grid-column: 2;
    }

    .contact-info {
      display: flex;
      flex-direction: column;
      align-items: center;
      gap: var(--flow-lg);
    }

    .text-section {
      display: flex;
      flex-direction: column;
      gap: var(--flow-sm);

      .title {
        font-size: 16px;
        letter-spacing: 2.32px;
        text-transform: uppercase;
        color: var(--primary-black);
      }

      h2 {
        font-size: clamp(2rem, 5vw, 2.8125rem);
        font-weight: 700;
        line-height: 1.16;
        color: var(--primary-black);
        margin: 0;
      }

      p {
        font-size: var(--p);
        line-height: 1.475;
        color: var(--text-grey);
        margin: 0;
        margin-top: 0.8125rem;
        max-width: 407px;
      }
    }

    .info-items {
      display: flex;
      flex-direction: column;
      gap: var(--flow-lg);
    }

    .info-item {
      display: flex;
      align-items: center;
      gap: var(--flow-md);
    }

    .icon-wrapper {
      display: flex;
      align-items: center;
      justify-content: center;
      width: var(--icon-size-xl);
      height: var(--icon-size-xl);
      border-radius: 50%;
      flex-shrink: 0;
    }

    .info-item:nth-child(1) .icon-wrapper {
      background-color: var(--contact-icon1-bg);
    }

    .info-item:nth-child(1) .icon {
      color: var(--contact-icon1-fill);
    }

    .info-item:nth-child(2) .icon-wrapper {
      background-color: var(--contact-icon2-bg);
    }

    .info-item:nth-child(2) .icon {
      color: var(--contact-icon2-fill);
    }

    .info-item:nth-child(3) .icon-wrapper {
      background-color: var(--contact-icon3-bg);
    }

    .info-item:nth-child(3) .icon {
      color: var(--contact-icon3-fill);
    }

    .icon {
      height: 26px;
      display: inline-block;
    }

    .info-text {
      display: flex;
      flex-direction: column;
      gap: var(--flow-xs);

      span {
        color: var(--primary-black);
        font-size: var(--p);
        letter-spacing: var(--title-letter-spacing);
        text-transform: var(--title-text-transform);
      }

      .value {
        font-size: var(--card-h3);
        font-weight: 600;
        line-height: 1.16;
        color: var(--primary-black);
        margin: 0;
        max-width: 262px;
      }
    }

    .images-section {
      display: none;
    }

    @container contact (width > 1200px) {
      .contact {
        grid-template-columns: var(--gtc-1200);
        padding: var(--flow-xxl) 0;
        gap: var(--flow-xl);
        grid-auto-flow: column;
      }

      .contact-info {
        grid-column: 2;
        grid-row: 1;
        justify-self: start;
        max-width: 420px;
        align-self: start;
      }

      .info-items {
        align-self: start;
      }

      .images-section {
        padding-top: var(--flow-lg);
        display: grid;
        grid-column: 2;
        grid-row: 1;
        justify-self: end;
        grid-template-columns: repeat(2, 316px);
        grid-template-rows: repeat(2, 243px);
        gap: var(--flow-md);
        position: relative;
        width: fit-content;
        margin-left: auto;
      }

      .pattern-bg {
        grid-row: 1;
        grid-column: 2;
        margin-top: -40px;
        margin-left: 50px;
        width: 308px;
        height: 308px;
        opacity: 0.6;
        z-index: 1;
        pointer-events: none;

        :global(svg) {
          width: 100%;
          height: 100%;
        }
      }

      .green-box {
        grid-row: 2;
        grid-column: 1;
        width: 307px;
        height: 164px;
        margin-left: -50px;
        margin-top: 110px;
        background-color: var(--primary-green);
        border-radius: var(--radius-md);
        z-index: 0;
      }

      .img-main {
        grid-column: 1;
        grid-row: 1 / 3;
        width: 316px;
        height: 506px;
        object-fit: cover;
        border-radius: var(--radius-md);
        z-index: 3;
      }

      .img-secondary-1 {
        grid-column: 2;
        grid-row: 1;
        width: 316px;
        height: 243px;
        object-fit: cover;
        border-radius: var(--radius-md);
        z-index: 4;
      }

      .img-secondary-2 {
        grid-column: 2;
        grid-row: 2;
        width: 316px;
        height: 243px;
        object-fit: cover;
        border-radius: var(--radius-md);
        z-index: 5;
      }
    }
  }
</style>
