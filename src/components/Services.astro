---
//@ts-nocheck
import servicesData from "@data/services.json";
console.log(servicesData);
---

<div class="card-wrapper">
  <ul>
    {
      servicesData.services.map((service) => (
        <li>
          <h2>{service.title}</h2>
          <p>{service.description}</p>
          <a href="#0">{service.buttonText}</a>
        </li>
      ))
    }
  </ul>
</div>

<style>
  @layer components {
    .card-wrapper {
      container-type: inline-size;
      container-name: services;

      width: 100%;
      max-width: 1200px;
      margin: 0 auto;
      grid-area: 1 / 1;
    }

    ul {
      display: flex;
      flex-direction: column;
      gap: var(--flow-md);
      width: 100%;
      margin-top: var(--flow-md);
      position: relative;
      z-index: 2;
      padding: 0;
      list-style: none;
      padding: var(--flow-md);

      li {
        display: flex;
        padding: var(--flow-lg);
        flex-direction: column;
        justify-content: flex-start;
        align-items: flex-start;
        gap: var(--flow-sm);
        flex: 1 0 0;
        border-radius: var(--radius-md);
        border: 1px solid rgba(255, 255, 255, 0.2);
        background: rgba(38, 38, 38, 0.9);
        backdrop-filter: blur(16px);
        width: 100%;
      }

      h2 {
        color: var(--secondary-white);
        font-size: var(--card-h2);
        font-style: normal;
        font-weight: 600;
        line-height: 1.2;
      }

      p {
        color: var(--secondary-white);
        font-size: var(--p);
        line-height: 1.4;
        margin: 0;
        flex-grow: 1;
      }

      a {
        font-size: var(--card-a);
        border-radius: var(--border-radius);
        background: #151515;
        color: var(--secondary-white);
        display: flex;
        padding: 1rem 1.9375rem;
        align-items: center;
        gap: var(--flow-sm);
        text-decoration: none;
        margin-top: auto;
        align-self: flex-start;
        white-space: nowrap;
        transition: background-color var(--transition-fast);
      }

      a:hover {
        background: #252525;
      }
    }

    @container services (min-width: 1200px) {
      ul {
        flex-direction: row;
        flex-wrap: nowrap;
        margin-top: -150px;
        padding: 0;
        li {
          flex: 1 1 0;
          align-self: stretch;
        }
      }
    }
  }
</style>
